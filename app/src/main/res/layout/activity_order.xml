<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/colorBackground"
    tools:context=".OrderActivity">

        <!-- Judul Halaman -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Food"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"

            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorSecondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                        <!-- Input Nama Makanan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food Name"
                            android:textSize="18sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etFoodName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter food name - Get From List"
                            android:padding="12dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="16dp"/>

                        <!-- Input Jumlah Porsi -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number of Servings"
                            android:textSize="18sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etServings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter number of servings"
                            android:inputType="number"
                            android:padding="12dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="16dp"/>

                        <!-- Input Nama Pemesan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ordering Name"
                            android:textSize="18sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ordering name by"
                            android:padding="12dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="16dp"/>

                        <!-- Input Catatan Tambahan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Additional Notes"
                            android:textSize="18sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter any additional notes"
                            android:padding="12dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="16dp"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Order -->
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:elevation="4dp"/>

</LinearLayout>
